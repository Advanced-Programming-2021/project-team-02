<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.view.ProfileMenuView">
   <VBox id="firstBox" alignment="CENTER" layoutX="125.0" layoutY="85.0" prefHeight="555.0" prefWidth="550.0" spacing="30.0">
      <HBox id="menuBar" alignment="CENTER" spacing="10.0">
      <ImageView id="icon" fitWidth="35" pickOnBounds="true" preserveRatio="true">
         <Image url="@../image/main_menu_icon.png" />
      </ImageView>
         <Label id="menuTitle" text="Profile Menu" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets left="75.0" right="75.0" />
         </VBox.margin>
      </HBox>
      <HBox>
         <VBox>
         <Label id="textField" fx:id="userNameLabel" prefHeight="18.0" prefWidth="274.0" text="Username Label" />
         <Label id="textField" fx:id="nickNameLabel" prefHeight="18.0" prefWidth="271.0" text="Nickname Label" />
         </VBox>
         <VBox>
         <Label id="textField" text="Profile Picture:" />
         <ImageView fx:id="image" fitHeight="150.0" fitWidth="223.0" pickOnBounds="true" preserveRatio="true" />
         </VBox>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <VBox alignment="CENTER" layoutY="368.0" prefHeight="26.0" prefWidth="700.0" spacing="15.0">
         <padding>
            <Insets left="10.0" />
         </padding>
         <Button id="button" onAction="#changeProfilePicture" text="Change Profile Picture" />
         <Button id="button" onAction="#changeNickName" text="Change Nickname" />
         <Button id="button" onAction="#changePassword" text="Change Password" />
         <Button id="exitButton" onAction="#back" text="Back" textAlignment="CENTER" />
      </VBox>
      <padding>
         <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
      </padding>
   </VBox>
   <stylesheets>
      <URL value="@../CSS/profile_menu_style.css" />
   </stylesheets>
</AnchorPane>
