<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.view.LoginMenuView">
   <VBox id="firstBox" alignment="CENTER" layoutX="120.0" layoutY="155.0" prefHeight="600.0" prefWidth="700.0">
      <Label id="FirstTitle" alignment="CENTER" contentDisplay="CENTER" text="Yu☆Gi☆Oh!" textAlignment="CENTER" textFill="WHITE" />
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="750.0" spacing="50.0">
         <VBox id="secondBox" alignment="CENTER" prefHeight="300.0" prefWidth="275.0" spacing="20.0">
            <Label id="SecondTitle" alignment="CENTER" contentDisplay="CENTER" text="Sign Up" textAlignment="CENTER" textFill="WHITE" />
            <TextField id="textField" fx:id="usernameFieldSignUp" promptText="Username" />
            <TextField id="textField" fx:id="nicknameFieldSignUp" promptText="Nickname" />
            <PasswordField id="textField" fx:id="passwordFieldSignUp" promptText="Password" />
            <PasswordField id="textField" fx:id="secondPasswordField" promptText="Confirm Password" />
            <Button id="Button" onMouseClicked="#registerUser" text="Sign up" textAlignment="CENTER" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <padding>
               <Insets left="35.0" right="35.0" />
            </padding>
         </VBox>
         <VBox id="secondBox" alignment="CENTER" prefHeight="200.0" prefWidth="275.0" spacing="20.0">
            <Label id="SecondTitle" alignment="CENTER" contentDisplay="CENTER" text="Login" textAlignment="CENTER" textFill="WHITE" />
            <TextField id="textField" fx:id="usernameFieldLogin" promptText="Username" />
            <PasswordField id="textField" fx:id="passwordFieldLogin" promptText="Password" />
            <Button id="Button" onMouseClicked="#loginUser" text="Login" textAlignment="CENTER" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <padding>
               <Insets left="35.0" right="35.0" />
            </padding>
            <HBox.margin>
               <Insets bottom="40.0" top="40.0" />
            </HBox.margin>
         </VBox>
         <padding>
            <Insets bottom="40.0" top="40.0" />
         </padding>
      </HBox>
      <Button id="ExitButton" onMouseClicked="#exit" text="Exit" textAlignment="CENTER" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </VBox>
   <stylesheets>
      <URL value="@../CSS/login_menu_style.css" />
   </stylesheets>
</AnchorPane>
