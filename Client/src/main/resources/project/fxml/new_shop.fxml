<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>
<AnchorPane id="secondPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.view.ShopMenuView">
    <stylesheets>
        <URL value="@../CSS/shop_menu.css"/>
    </stylesheets>
    <ImageView onMouseClicked="#nextPage" fitHeight="44.0" fitWidth="51.0" layoutX="497.0" layoutY="847.0"
               pickOnBounds="true" preserveRatio="true" xmlns="http://javafx.com/javafx/16"
               xmlns:fx="http://javafx.com/fxml/1">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <image>
            <Image url="@../image/Icon/arrow.png"/>
        </image>
    </ImageView>
    <ImageView onMouseClicked="#previousPage" fitHeight="44.0" fitWidth="45.0" layoutX="410.0" layoutY="847.0"
               pickOnBounds="true" preserveRatio="true" rotate="180.0" xmlns="http://javafx.com/javafx/16"
               xmlns:fx="http://javafx.com/fxml/1">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <image>
            <Image url="@../image/Icon/arrow.png"/>
        </image>
    </ImageView>
    <children>
        <AnchorPane id="secondBox" layoutX="59.0" layoutY="80.0" prefHeight="759.0" prefWidth="875.0">
            <children>
                <GridPane fx:id="shopGrid" layoutX="49.0" layoutY="14.0" prefHeight="717.0" prefWidth="777.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </children>
        </AnchorPane>
        <VBox alignment="CENTER" id="secondBox" layoutX="1062.0" layoutY="180.0" prefHeight="510.0" prefWidth="337.0"
              spacing="10.0">
            <children>
                <ImageView fx:id="selectedCardImage" fitHeight="356.0" fitWidth="339.0" pickOnBounds="true"
                           preserveRatio="true"/>
                <Label id="label" fx:id="priceLabel" alignment="CENTER" prefHeight="18.0" prefWidth="358.0"
                       text="Price : ">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                </Label>
                <Label id="label" fx:id="availabilityLabel" alignment="CENTER" prefHeight="18.0" prefWidth="334.0"
                       text="Available ?">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="339.0">
                    <children>
                        <Button fx:id="buyButton" id="button" mnemonicParsing="false" text="Buy">
                            <HBox.margin>
                                <Insets left="15.0" right="15.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="sellButton" id="button" mnemonicParsing="false" text="Sell">
                            <HBox.margin>
                                <Insets left="15.0" right="15.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
</AnchorPane>
